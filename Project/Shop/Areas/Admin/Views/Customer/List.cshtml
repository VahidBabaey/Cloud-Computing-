@model List<Shop.Areas.Admin.Models.CustomerRegisterModel>
@{
    Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";
}

<div>
    <caption-view asp-title="Customer List "></caption-view>

    <div style="text-align:left">
        <a class="btn-link" asp-area="Admin" asp-controller="Customer" asp-action="Create">New Add</a>
    </div>
    <br />
    <table class="table text-center table-bordered table-hover">
        <thead>
            <tr>
                <td>Firstname and Fullname</td>
                <td>Username</td>
                <td>Email</td>
                <td>Role Assigned</td>
                <td>Edit</td>
                <td>Delete</td>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                var spec = item.FirstName + " " + item.LastName;
                <tr>
                    <td>@spec</td>
                    <td>@item.UserName</td>
                    <td>@item.Email</td>
                    <td><a class="btn-link" asp-area="Admin" asp-controller="Customer" asp-action="ManageRoles" asp-route-id="@item.Id">Assigne</a></td>
                    <td><a class="btn-link" asp-area="Admin" asp-controller="Category" asp-action="Create" asp-route-id="@item.Id">Edit</a></td>
                    <td><a class="btn-link" asp-area="Admin" asp-controller="Category" asp-action="Remove" asp-route-id="@item.Id">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>
